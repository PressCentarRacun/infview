{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"definitions": 
	{
		"additionalProperties": false,
		"entity": 
		{
			"type": "object",
			"additionalProperties": false,
			"properties": 
			{
				"name": 
				{
					"type": "string"
				},

				"attributes": 
				{
					"type": "array",
					"items": 
					{
						"type": "object",
						"additionalProperties": false,
						"properties": 
						{
							"name": 
							{
								"type": "string"
							},

							"type": 
							{
								"enum": 
								[
									"String",
									"Int",
									"DateTime",
									"Boolean"
								]
							}
						},

						"required": 
						[
							"name",
							"type"
						]
					}
				},

				"relations": 
				{
					"type": "array",
					"items": 
					{
						"type": "object",
						"additionalProperties": false,
						"properties": 
						{
							"name": 
							{
								"type": "string"
							},

							"objectEntity": 
							{
								"type": "string"
							}
						},

						"required": 
						[
							"name",
							"objectEntity"
						]
					}
				}
			},

			"required": 
			[
				"name",
				"attributes",
				"relations"
			]
		},

		"package": 
		{
			"type": "object",
			"additionalProperties": false,
			"properties": 
			{
				"name": 
				{
					"type": "string"
				},

				"entities": 
				{
					"type": "array",
					"items": 
					{
						"$ref": "#/definitions/entity"
					}
				},
				
				"packages": 
				{
					"type": "array",
					"items": 
					{
						"$ref": "#/definitions/package"
					}
				}
			},			

			"required": 
			[
				"name",
				"entities",
				"packages"
			]
		}
	},

	"type": "object",
	"properties": 
	{
		"description": { "type": "string" },
		"name": 
		{
			"type": "string"
		},

		"location": 
		{
			"type": "string"
		},

		"packages": 
		{
			"type": "array",
			"items": 
			{
				"$ref": "#/definitions/package"
			}
		},
		
		"entities":
		{
			"type": "array",
			"items":
			{
				"$ref": "#/definitions/entity"
			}
		}
	},

	"additionalProperties": false,
	"required": 
	[
		"name",
		"location",
		"entities",
		"packages",
		"description"
	]
}