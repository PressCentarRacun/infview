{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"definitions": 
	{
		"additionalProperties": false,
		"entity": 
		{
			"type": "object",
			"additionalProperties": false,
			"properties": 
			{
				"name": 
				{
					"type": "string"
				},

				"attributes": 
				{
					"type": "array",
					"items": 
					{
						"type": "object",
						"additionalProperties": false,
						"properties": 
						{
							"name": 
							{
								"type": "string"
							},

							"type": 
							{
								"enum": 
								[
									"varchar",
									"char",
									"datetime",
									"numeric"
								]
							},

                            "length":
                            {
                                "type": "number"
                            },

                            "primaryKey":
                            {
                                "type": "boolean"
                            }
						},

						"required": 
						[
							"name",
                            "length",
							"type"
						]
					}
				},

				"relations": 
				{
					"type": "array",
					"items": 
					{
						"type": "object",
						"additionalProperties": false,
						"properties": 
						{
							"referencedAttribute": 
							{
								"type": "string"
							},

                            "referringAttribute":
                            {
                                "type": "string"
                            }
						},

						"required": 
						[
							"referringAttribute",
                            "referencedAttribute"
						]
					}
				},
                
                "type":
                {
                    "enum":
                    [
                        "serial",
                        "sequential",
                        "indexedSequential"
                    ]
                },

                "url":
                {
                    "type": "string"
                }
			},

			"required": 
			[
				"name",
				"attributes",
                "type"
			]
		},

		"package": 
		{
			"type": "object",
			"additionalProperties": false,
			"properties": 
			{
				"name": 
				{
					"type": "string"
				},

				"entities": 
				{
					"type": "array",
					"items": 
					{
						"$ref": "#/definitions/entity"
					}
				},
				
				"packages": 
				{
					"type": "array",
					"items": 
					{
						"$ref": "#/definitions/package"
					}
				}
			},			

			"required": 
			[
				"name",
				"entities"
			]
		}
	},

	"type": "object",
	"properties": 
	{
		"description": { "type": "string" },
		"name": 
		{
			"type": "string"
		},

		"location": 
		{
			"type": "string"
		},

		"packages": 
		{
			"type": "array",
			"items": 
			{
				"$ref": "#/definitions/package"
			}
		},

        "type": {
            "enum": [
                "files"
            ]
        },
		
		"entities":
		{
			"type": "array",
			"items":
			{
				"$ref": "#/definitions/entity"
			}
		}
	},

	"additionalProperties": false,
	"required": 
	[
		"name",
		"location",
		"packages",
		"description"
	]
}
